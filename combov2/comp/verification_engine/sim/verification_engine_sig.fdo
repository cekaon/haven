# Paths
set TB_PATH                    "/testbench"
set VERIFICATION_ENGINE_PATH   "$TB_PATH/uut"
set FL_RAND_GEN_PATH           "$VERIFICATION_ENGINE_PATH/fl_rand_gen_i"
set FL_ADAPTER_PATH            "$FL_RAND_GEN_PATH/fl_adapter_i"
set VER_CORE_PATH              "$VERIFICATION_ENGINE_PATH/ver_core_i"
set FL_DRIVER_PATH             "$VER_CORE_PATH/fl_hw_driver_i"
set FL_DRIVER_CTRL_PATH        "$FL_DRIVER_PATH/fl_driver_ctrl_i"
set TX_ASYNC_FL_UNIT_PATH      "$FL_DRIVER_PATH/tx_async_fl_unit_i"
set TX_DELAY_PROC_UNIT_PATH    "$TX_ASYNC_FL_UNIT_PATH/delay_unit_i"
set FL_MONITOR_PATH            "$VER_CORE_PATH/fl_hw_monitor_i"
set MONITOR_PACKETIZER_PATH    "$FL_MONITOR_PATH/monitor_packetizer_i"

# include signals
source      "signals.fdo"
source      "../../verification_core/sim/signals.fdo"
source      "../../hw_ver/fl_adapter/sim/signals.fdo"
source      "../../hw_ver/fl_hw_driver/sim/signals.fdo"
source      "../../hw_ver/fl_hw_driver/fl_driver_ctrl/sim/signals.fdo"
source      "../../hw_ver/fl_hw_driver/tx_async_fl_unit/sim/signals.fdo"
source      "../../hw_ver/fl_hw_monitor/sim/signals.fdo"

exec make
view wave
delete wave *

add_wave "-noupdate -label RESET -color yellow"  $TB_PATH/reset
add_wave "-noupdate -label CLK   -color yellow"  $TB_PATH/clk

add wave -divider "****************************"
add wave -divider "INTERFACE" 
add wave -divider "****************************"
blk_VER_ENGINE              $VERIFICATION_ENGINE_PATH

add wave -divider "****************************"
add wave -divider "FL Adapter"
add wave -divider "****************************"
blk_ADAPTER_UNIT            $FL_ADAPTER_PATH

add wave -divider "****************************"
add wave -divider "Verification Core" 
add wave -divider "****************************"
blk_VER_CORE                $VER_CORE_PATH

add wave -divider "****************************"
add wave -divider "DUT INTERFACE" 
add wave -divider "****************************"
blk_VER_CORE_DUT_IFC        $VER_CORE_PATH

add wave -divider "****************************"
add wave -divider "FL DRIVER" 
add wave -divider "****************************"
blk_DRIVER_UNIT             $FL_DRIVER_PATH

add wave -divider "****************************"
add wave -divider "FL DRIVER CTRL" 
add wave -divider "****************************"
blk_FL_DRIVER_CTRL_IFC      $FL_DRIVER_CTRL_PATH

add wave -divider "****************************"
add wave -divider "TX ASYNC FL UNIT"
add wave -divider "****************************"
blk_ASYNC_UNIT              $TX_ASYNC_FL_UNIT_PATH
blk_ASYNC_UNIT_INTERNALS    $TX_ASYNC_FL_UNIT_PATH

add wave -divider "****************************"
add wave -divider "TX DELAY PROC UNIT"
add wave -divider "****************************"
blk_DELAY_PROC_UNIT         $TX_DELAY_PROC_UNIT_PATH

add wave -divider "****************************"
add wave -divider "MONITOR PACKETIZER"
add wave -divider "****************************"
blk_MONITOR_PACKETIZER_NEW_PROTOCOL            $MONITOR_PACKETIZER_PATH
blk_MONITOR_PACKETIZER_NEW_PROTOCOL_INTERNALS  $MONITOR_PACKETIZER_PATH

restart -f
run 5 us
