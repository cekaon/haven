# simulation script - include signals

# Paths
set HALT_MONITOR_PATH         "/testbench/uut"
set TB_BASE                   "/testbench"

source      "signals.fdo"

exec make
view wave
delete wave *

add wave -noupdate -label RESET $TB_BASE/reset
add wave -noupdate -label CLK $TB_BASE/clk

blk_HALT_MONITOR_IFC       "$HALT_MONITOR_PATH"

restart -f
run 200 ns
